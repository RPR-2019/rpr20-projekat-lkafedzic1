<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.project.controller.PublicationTypeController">
   <children>
      <GridPane alignment="CENTER" prefHeight="139.0" prefWidth="317.0">
          <columnConstraints>
              <ColumnConstraints maxWidth="117.0" minWidth="29.0" prefWidth="57.0" />
              <ColumnConstraints maxWidth="1.7976931348623157E308" minWidth="97.0" prefWidth="200.0" />
          </columnConstraints>
          <rowConstraints>
              <RowConstraints />
              <RowConstraints />
          </rowConstraints>
          <children>
              <Label text="Type:" />
              <TextField fx:id="fldTitle" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="173.0" GridPane.columnIndex="1" />
              <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                  <buttons>
                      <Button fx:id="btnAdd" defaultButton="true" mnemonicParsing="false" onAction="#actionAddNewType" text="Add" />
                      <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#actionCancel" text="Cancel" />
                  </buttons>
               <GridPane.margin>
                  <Insets top="20.0" />
               </GridPane.margin>
              </ButtonBar>
          </children>
          <padding>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
      </GridPane>
      <HBox>
         <children>
            <Label fx:id="lblStatusBar" text="Adding a new type of publication">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
