               <GridPane.margin>
                  <Insets top="-5.0" />
               </GridPane.margin>
            </Label>
         </children>
         <padding>
            <Insets left="20.0" right="10.0" top="30.0" />
         </padding>
      </GridPane>
      <HBox prefHeight="9.0" prefWidth="345.0">
         <children>
            <Label fx:id="lblStatusBar" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Changing password">
