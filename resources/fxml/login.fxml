<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="294.0" prefWidth="380.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.project.controllers.LoginController">
   <stylesheets>
      <URL value="@/css/login.css" />
   </stylesheets>
   <center>
      <GridPane alignment="center" hgap="10" prefHeight="276.0" prefWidth="380.0" vgap="10">
         <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints/>
            <ColumnConstraints/>
         </columnConstraints>
         <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
         </rowConstraints>
         <padding>
            <Insets left="40.0" right="40.0" top="5.0"/>
         </padding>
         <Label text="Username:" GridPane.rowIndex="2"/>
         <TextField fx:id="fldUsername" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
         <Label text="Password:" GridPane.rowIndex="3"/>
         <PasswordField fx:id="fldPassword" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
         <Button fx:id="btnLogIn" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                 onAction="#actionLogin" text="Log in" GridPane.columnSpan="2" GridPane.rowIndex="5"/>
         <VBox spacing="5.0" GridPane.columnSpan="2" GridPane.rowIndex="6">
            <GridPane.margin>
               <Insets top="5.0"/>
            </GridPane.margin>
            <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308"
                   text="Don't have an account?" textAlignment="CENTER"/>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Button fx:id="btnSignUp" mnemonicParsing="false" onAction="#actionSignUp" text="Sing up"
                          textFill="#2d8bc9"/>
                  <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="or">
                     <HBox.margin>
                        <Insets/>
                     </HBox.margin>
                  </Label>
                  <Button fx:id="btnContinueAsGuest" alignment="CENTER" contentDisplay="CENTER"
                          mnemonicParsing="false" onAction="#actionContinueAsGuest" text="Continue as guest"
                          textFill="#2d8bc9"/>
               </children>
            </HBox>
         </VBox>
         <VBox fx:id="vboxError" visible="false" GridPane.columnSpan="2" GridPane.rowIndex="4">
            <Label prefHeight="35.0" prefWidth="307.0"
                   text="The username or password you entered is" textFill="#cd1111">
               <padding>
                  <Insets top="-7.0"/>
               </padding>
            </Label>
            <Label text="incorrect." textFill="#cd1111"/>
         </VBox>
      </GridPane>
   </center>
   <top>
      <Button fx:id="btnChangePassword" alignment="TOP_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#actionChangePassword" text="Change password" textAlignment="CENTER" textFill="#2d8bc9" BorderPane.alignment="TOP_RIGHT">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Button>
   </top>
</BorderPane>
