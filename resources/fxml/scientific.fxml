<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            prefHeight="419.0" prefWidth="464.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ba.unsa.etf.rpr.project.controllers.ScientificWorkController">
   <stylesheets>
      <URL value="@/css/style.css"/>
   </stylesheets>
   <VBox fx:id="formPane" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="393.0"
         prefWidth="462.0">
      <GridPane hgap="10.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="360.0"
                prefWidth="354.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints maxWidth="1.7976931348623157E308" minWidth="19.0" prefWidth="142.0"/>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="173.0" prefWidth="280.0"/>
            <ColumnConstraints/>
         </columnConstraints>
         <rowConstraints>
            <RowConstraints/>
            <RowConstraints maxHeight="1.7976931348623157E308" prefHeight="52.0"/>
            <RowConstraints maxHeight="1.7976931348623157E308"/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints maxHeight="10.0" minHeight="10.0" prefHeight="10.0"/>
            <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0"/>
            <RowConstraints/>
         </rowConstraints>
         <children>
            <Label text="Title:"/>
            <TextField fx:id="fldTitle" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="299.0"
                       GridPane.columnIndex="1"/>
            <Label text="Author:" GridPane.rowIndex="1"/>
            <ChoiceBox fx:id="choiceAuthor" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>
            <Label text="Publication type:" GridPane.rowIndex="2"/>
            <Label text="Year of publication:" GridPane.rowIndex="3"/>
            <Spinner fx:id="spinnerYear" editable="true" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                     GridPane.rowIndex="3"/>
            <Label text="Tags:" GridPane.rowIndex="4"/>
            <TextArea fx:id="txtAreaTags" maxWidth="1.7976931348623157E308" prefWidth="305.0"
                      GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <Label text="Field of study:" GridPane.rowIndex="5"/>
            <ButtonBar maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2"
                       GridPane.halignment="CENTER" GridPane.rowIndex="10">
               <buttons>
                  <Button fx:id="btnAdd" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false"
                          onAction="#actionAddScientificWork" text="Add"/>
                  <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#actionCancel"
                          text="Close"/>
               </buttons>
               <GridPane.margin>
                  <Insets/>
               </GridPane.margin>
            </ButtonBar>
            <Label text="Add additional info:" GridPane.rowIndex="7"/>
            <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
               <children>
                  <CheckBox fx:id="checkBoxAdditional" mnemonicParsing="false" onAction="#actionCheckBox">
                     <HBox.margin>
                        <Insets top="5.0"/>
                     </HBox.margin>
                  </CheckBox>
                  <TextField fx:id="fldPublishedIn" maxWidth="1.7976931348623157E308" prefHeight="26.0"
                             prefWidth="252.0" visible="false"/>
               </children>
            </HBox>
            <Label text="Scientific work:" GridPane.rowIndex="6"/>
            <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
               <children>
                  <Button fx:id="btnUpload" mnemonicParsing="false" onAction="#actionUpload" text="Upload file"/>
                  <Label fx:id="lblNothingChosen" text="You haven't chosen any file" textFill="#cd1111"
                         visible="false">
                     <HBox.margin>
                        <Insets top="5.0"/>
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <ChoiceBox fx:id="choiceFieldOfStudy" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                       GridPane.rowIndex="5"/>
            <ChoiceBox fx:id="choicePublicationType" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                       GridPane.rowIndex="2"/>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
      </GridPane>
      <HBox alignment="BOTTOM_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            prefHeight="0.0" prefWidth="462.0" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="lblStatusBar" text="Adding a new scientific work">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </padding>
            </Label>
         </children>
      </HBox>
   </VBox>
</ScrollPane>
