<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="393.0" prefWidth="462.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.project.controller.ScientificWorkController">
   <children>
      <GridPane hgap="10.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="360.0" prefWidth="354.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints maxWidth="1.7976931348623157E308" minWidth="19.0" />
            <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="173.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         <children>
            <Label text="Title:" />
            <TextField fx:id="fldTitle" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="299.0" GridPane.columnIndex="1" />
            <Label text="Author:" GridPane.rowIndex="1" />
            <TextField fx:id="fldAuthor" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Publication type:" GridPane.rowIndex="2" />
            <ComboBox fx:id="comboType" maxWidth="1.7976931348623157E308" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Year of publication:" GridPane.rowIndex="4" />
            <Spinner fx:id="spinnerYear" editable="true" initialValue="1990" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Tags:" GridPane.rowIndex="5" />
            <TextArea fx:id="txtAreaTags" maxWidth="1.7976931348623157E308" prefHeight="32.0" prefWidth="206.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="Field of study:" GridPane.rowIndex="6" />
            <ComboBox fx:id="choiceFieldOfStudy" maxWidth="1.7976931348623157E308" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <ButtonBar maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="9">
              <buttons>
                <Button fx:id="btnAdd" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#actionAddScienceWork" text="Add" />
                  <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#actionCancel" text="Cancel" />
              </buttons>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </ButtonBar>
            <Label text="Published in:" GridPane.rowIndex="3" />
            <TextField fx:id="fldPublishedIn" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Scientific work:" GridPane.rowIndex="7" />
            <Button fx:id="btnUpload" mnemonicParsing="false" onAction="#actionUpload" text="Upload file" GridPane.columnIndex="1" GridPane.rowIndex="7" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
      <HBox>
         <children>
            <Label fx:id="lblStatusBar" text="Adding a new scientific work">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
