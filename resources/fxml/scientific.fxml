<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="345.0" prefWidth="462.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.project.controller.ScientificWorkController">
   <children>
      <GridPane hgap="10.0" prefHeight="317.0" prefWidth="353.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints maxWidth="1.7976931348623157E308" minWidth="19.0" />
            <ColumnConstraints maxWidth="1.7976931348623157E308" minWidth="173.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         <children>
            <Label text="Title:" />
            <TextField fx:id="fldTitle" prefHeight="26.0" prefWidth="262.0" GridPane.columnIndex="1" />
            <Label text="Author:" GridPane.rowIndex="1" />
            <TextField fx:id="fldAuthor" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Publication type:" GridPane.rowIndex="2" />
            <ComboBox fx:id="comboType" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Year of publication:" GridPane.rowIndex="4" />
            <Spinner fx:id="spinnerYear" editable="true" initialValue="1990" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Tags:" GridPane.rowIndex="5" />
            <TextArea fx:id="txtAreaTags" prefHeight="32.0" prefWidth="206.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="Field of study:" GridPane.rowIndex="6" />
            <ComboBox fx:id="choiceFieldOfStudy" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <ButtonBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="8">
              <buttons>
                <Button fx:id="btnAdd" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#actionAddScienceWork" text="Add" />
                  <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#actionCancel" text="Cancel" />
              </buttons>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </ButtonBar>
            <Label text="Published in:" GridPane.rowIndex="3" />
            <TextField fx:id="fldPublishedIn" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
      <HBox>
         <children>
            <Label fx:id="lblStatusBar" text="Adding a new scientific work">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
