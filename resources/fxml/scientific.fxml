<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" prefHeight="317.0" prefWidth="353.0" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.project.ScientificWorkController">
   <columnConstraints>
      <ColumnConstraints maxWidth="149.0" minWidth="19.0" prefWidth="137.0" />
      <ColumnConstraints maxWidth="303.0" minWidth="173.0" prefWidth="185.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label text="Title:" />
      <TextField fx:id="fldTitle" GridPane.columnIndex="1" />
      <Label text="Author:" GridPane.rowIndex="1" />
      <TextField fx:id="fldAuthor" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Label text="Publication type:" GridPane.rowIndex="2" />
      <ComboBox fx:id="comboType" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Label text="Year of publication:" GridPane.rowIndex="3" />
      <Spinner fx:id="spinnerYear" editable="true" initialValue="1990" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Label text="Tags:" GridPane.rowIndex="4" />
      <TextArea fx:id="txtAreaTags" prefHeight="32.0" prefWidth="206.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Label text="Field of study:" GridPane.rowIndex="5" />
      <ChoiceBox fx:id="choiceFieldOfStudy" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <ButtonBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="7">
        <buttons>
          <Button fx:id="btnAdd" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#actionAddScienceWork" text="Add" />
            <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#actionCancel" text="Cancel" />
        </buttons>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
