<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="503.0" prefWidth="688.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.project.controllers.GuestController">
   <stylesheets>
       <URL value="@/css/login.css"/>
   </stylesheets>
    <content>
      <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="482.0" prefWidth="669.0">
          <stylesheets>
              <URL value="@/css/guest.css" />
          </stylesheets>
         <top>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <MenuBar maxWidth="1.7976931348623157E308">
                    <menus>
                      <Menu mnemonicParsing="false" text="File">
                        <items>
                          <MenuItem fx:id="itemClose" mnemonicParsing="false" onAction="#actionClose" text="Close" />
                        </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Help">
                        <items>
                          <MenuItem fx:id="itemAbout" mnemonicParsing="false" onAction="#actionAbout" text="About" />
                        </items>
                      </Menu>
                    </menus>
                  </MenuBar>
                  <HBox alignment="TOP_RIGHT" spacing="5.0">
                     <children>
                        <Label fx:id="lblWelcome" alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="You are currently using guest access!">
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </Label>
                        <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#actionLogin" text="(Log in)" textFill="#2d8bc9" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets bottom="30.0" />
               </BorderPane.margin>
            </VBox>
         </top>
         <center>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="TOP_CENTER">
               <children>
                  <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="10.0">
                     <children>
                        <TextField fx:id="fldSearch" prefHeight="26.0" prefWidth="253.0" />
                        <Button fx:id="btnSearch" mnemonicParsing="false" text="Search" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                     <children>
                        <Label fx:id="lblSearch" alignment="CENTER" contentDisplay="CENTER" text="Search in:" />
                        <ChoiceBox fx:id="choiceCategory" prefWidth="150.0" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                  <children>
                      <TableView fx:id="tableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" prefHeight="269.0" prefWidth="649.0">
                          <columns>
                              <TableColumn fx:id="columnTitle" maxWidth="1.7976931348623157E308" minWidth="50.0" prefWidth="153.0" text="Title" />
                              <TableColumn fx:id="columnAuthor" minWidth="50.0" prefWidth="137.0" text="Author" />
                              <TableColumn fx:id="columnYear" minWidth="55.0" prefWidth="76.0" text="Year" />
                              <TableColumn fx:id="columnFieldOfStudy" minWidth="109.0" prefWidth="140.0" text="Field of study" />
                              <TableColumn fx:id="columnType" minWidth="101.0" prefWidth="146.0" text="Publicaton type" />
                          </columns>
                      </TableView>
                  </children>
                  <VBox.margin>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </VBox.margin>
               </Pane>
            </VBox>
         </center>
         <bottom>
            <HBox BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <children>
                  <Label fx:id="lblStatusBar" text="Running in guest mode" />
               </children>
            </HBox>
         </bottom>
         
      </BorderPane>
   </content>
</ScrollPane>
